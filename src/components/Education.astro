<section class="education-section-premium" id="education">
    <div class="container">
        <div class="section-header" data-aos="fade-up">
            <h2 class="section-title">Education</h2>
            <div class="section-line"></div>
        </div>

        <div class="education-entries">
            <div class="edu-entry" data-aos="fade-up" data-aos-delay="100">
                <div class="logo-container">
                    <div class="logo-box iit-logo">
                        <img
                            src="/assets/img/IIT.png"
                            alt="Illinois Institute of Technology Logo"
                        />
                    </div>
                </div>
                <div class="content-container">
                    <div class="header-row">
                        <div class="main-info">
                            <h3 class="degree">
                                Master of Science in Cybersecurity
                            </h3>
                            <h4 class="school">
                                Illinois Institute of Technology
                            </h4>
                        </div>
                        <span class="year-badge">2021 - 2023</span>
                    </div>
                    <!-- <p class="details">Focused on advanced threat analysis, network security, and risk compliance.</p> -->
                </div>
            </div>

            <div class="edu-entry" data-aos="fade-up" data-aos-delay="150">
                <div class="logo-container">
                    <div class="logo-box">
                        <img src="/assets/img/RUAS.jpg" alt="RUAS Logo" />
                    </div>
                </div>
                <div class="content-container">
                    <div class="header-row">
                        <div class="main-info">
                            <h3 class="degree">Bachelor of Technology</h3>
                            <p class="specialization">
                                Electrical, Electronics & Communications
                                Engineering
                            </p>
                            <h4 class="school">
                                Ramaiah University of Applied Sciences
                            </h4>
                        </div>
                        <span class="year-badge">2017 - 2021</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .education-section-premium {
        padding: 100px 0;
        background-color: transparent;
    }

    .section-header {
        display: flex;
        align-items: center;
        gap: 20px;
        margin-bottom: 60px;
    }

    .section-title {
        font-family: "Plus Jakarta Sans", sans-serif;
        font-weight: 700;
        font-size: 2.5rem;
        color: var(--cinder);
        margin: 0;
        white-space: nowrap;
    }

    .section-line {
        height: 1px;
        background: var(--light-4);
        width: 100%;
        opacity: 0.5;
    }

    .education-entries {
        display: flex;
        flex-direction: column;
        gap: 40px;
    }

    .edu-entry {
        display: flex;
        align-items: center;
        gap: 40px;
        padding: 40px;
        background: var(--white);
        border-radius: 24px;
        transition: all 0.4s ease;
        border: 1px solid transparent; /* Prepare for border transition */
        box-shadow: 0 10px 40px -10px rgba(0, 0, 0, 0.05);
    }

    .edu-entry:hover {
        transform: translateY(-5px);
        box-shadow: 0 20px 50px -10px rgba(0, 0, 0, 0.1);
    }

    .logo-container {
        flex-shrink: 0;
    }

    .logo-box {
        width: 100px;
        height: 100px;
        padding: 15px;
        background: #fff;
        border-radius: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
        border: 1px solid var(--light-2);
        overflow: hidden;
    }

    /* IIT specific logo override to remove whitespace/border look */
    .logo-box.iit-logo {
        padding: 0;
        background: var(
            --cinder
        ); /* Fallback dark background to make red pop if transparent */
        border: none;
    }

    .logo-box.iit-logo img {
        width: 100%;
        height: 100%;
        object-fit: cover; /* Fill the box completely */
    }

    .logo-box img {
        width: 100%;
        height: 100%;
        object-fit: contain;
    }

    .content-container {
        flex-grow: 1;
        width: 100%;
    }

    .header-row {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        gap: 20px;
    }

    .degree {
        font-family: "Plus Jakarta Sans", sans-serif;
        font-weight: 700;
        font-size: 1.5rem;
        color: var(--cinder);
        margin-bottom: 4px;
        line-height: 1.2;
    }

    .specialization {
        font-size: 1.1rem;
        color: var(--cinder-light);
        margin-bottom: 8px;
        font-weight: 500;
    }

    .school {
        font-family: "Inter", sans-serif;
        font-weight: 500;
        font-size: 1.1rem;
        color: var(--purple);
        margin: 0;
    }

    .year-badge {
        font-family: "Inter", monospace;
        font-weight: 600;
        font-size: 0.9rem;
        padding: 8px 16px;
        border-radius: 12px;
        background: var(--light);
        color: var(--cinder);
        white-space: nowrap;
        transition: all 0.3s ease;
    }

    .edu-entry:hover .year-badge {
        background: var(--purple);
        color: var(--white);
    }

    .details {
        margin-top: 16px;
        color: var(--cinder-light);
        line-height: 1.6;
        font-size: 1rem;
    }

    @media (max-width: 768px) {
        .edu-entry {
            flex-direction: column;
            align-items: flex-start;
            padding: 24px;
            gap: 24px;
        }

        .header-row {
            flex-direction: column;
            gap: 12px;
        }

        .logo-box {
            width: 80px;
            height: 80px;
        }

        .section-title {
            font-size: 2rem;
        }

        .year-badge {
            align-self: flex-start;
        }
    }
</style>
