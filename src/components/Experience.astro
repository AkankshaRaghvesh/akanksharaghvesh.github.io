<section class="experience-section-premium" id="experience">
    <div class="container">
        <div class="section-header" data-aos="fade-up">
            <h2 class="section-title">Work Experience</h2>
            <div class="section-line"></div>
        </div>

        <div class="experience-feed">
            <!-- Item 1 -->
            <div class="exp-card" data-aos="fade-up">
                <div class="card-sidebar">
                    <div class="company-logo">
                        <img src="/assets/img/KU.png" alt="Keiser University" />
                    </div>
                    <div class="line-connector"></div>
                </div>
                <div class="card-main">
                    <div class="card-header">
                        <div class="role-info">
                            <h3 class="role">
                                Cybersecurity / IT Professional
                            </h3>
                            <h4 class="company">Keiser University</h4>
                        </div>
                        <div class="meta-info">
                            <span class="period">May 2024 - Current</span>
                            <span class="location">Florida, US</span>
                        </div>
                    </div>
                    <div class="tags-container">
                        <span class="tech-pill">IT Support</span>
                        <span class="tech-pill">Vulnerability Assessment</span>
                        <span class="tech-pill">Threat Modeling</span>
                    </div>
                </div>
            </div>

            <!-- Item 2 -->
            <div class="exp-card" data-aos="fade-up" data-aos-delay="100">
                <div class="card-sidebar">
                    <div class="company-logo">
                        <img
                            src="/assets/img/RU.jpg"
                            alt="Rush University Medical Center"
                        />
                    </div>
                    <div class="line-connector"></div>
                </div>
                <div class="card-main">
                    <div class="card-header">
                        <div class="role-info">
                            <h3 class="role">Cybersecurity Analyst</h3>
                            <h4 class="company">
                                Rush University Medical Center
                            </h4>
                        </div>
                        <div class="meta-info">
                            <span class="period">May 2023 - Aug 2023</span>
                            <span class="location">Chicago, US</span>
                        </div>
                    </div>
                    <div class="tags-container">
                        <span class="tech-pill">BurpSuite</span>
                        <span class="tech-pill">Ticketing System</span>
                        <span class="tech-pill">IT Help Desk</span>
                    </div>
                </div>
            </div>

            <!-- Item 3 -->
            <div class="exp-card" data-aos="fade-up" data-aos-delay="200">
                <div class="card-sidebar">
                    <div class="company-logo">
                        <img src="/assets/img/METI.jpg" alt="METI JAPAN" />
                    </div>
                    <div class="line-connector"></div>
                </div>
                <div class="card-main">
                    <div class="card-header">
                        <div class="role-info">
                            <h3 class="role">Intern</h3>
                            <h4 class="company">METI JAPAN</h4>
                        </div>
                        <div class="meta-info">
                            <span class="period">Aug 2021 - Dec 2021</span>
                            <span class="location">Nagoya, Japan</span>
                        </div>
                    </div>
                    <div class="tags-container">
                        <span class="tech-pill">SQL</span>
                    </div>
                </div>
            </div>

            <!-- Item 4 -->
            <div class="exp-card" data-aos="fade-up" data-aos-delay="300">
                <div class="card-sidebar">
                    <div class="company-logo">
                        <img
                            src="/assets/img/CPS.png"
                            alt="Chicago Public Schools"
                        />
                    </div>
                    <!-- No line connector for last item -->
                </div>
                <div class="card-main">
                    <div class="card-header">
                        <div class="role-info">
                            <h3 class="role">Exam Proctor</h3>
                            <h4 class="company">Chicago Public Schools</h4>
                        </div>
                        <div class="meta-info">
                            <span class="period">Oct 2022 - May 2023</span>
                            <span class="location">Chicago, US</span>
                        </div>
                    </div>
                    <div class="tags-container">
                        <span class="tech-pill">Microsoft Office</span>
                        <span class="tech-pill">Leadership</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .experience-section-premium {
        padding: 100px 0;
    }

    .section-header {
        display: flex;
        align-items: center;
        gap: 20px;
        margin-bottom: 60px;
    }

    .section-title {
        font-family: "Plus Jakarta Sans", sans-serif;
        font-weight: 700;
        font-size: 2.5rem;
        color: var(--cinder);
        margin: 0;
        white-space: nowrap;
    }

    .section-line {
        height: 1px;
        background: var(--light-4);
        width: 100%;
        opacity: 0.5;
    }

    .experience-feed {
        display: flex;
        flex-direction: column;
    }

    .exp-card {
        display: flex;
        gap: 24px;
        position: relative;
    }

    .card-sidebar {
        display: flex;
        flex-direction: column;
        align-items: center;
        width: 80px;
        flex-shrink: 0;
    }

    .company-logo {
        width: 80px;
        height: 80px;
        border-radius: 16px;
        background: #fff;
        padding: 8px;
        border: 1px solid var(--light-2);
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
        z-index: 2;
        overflow: hidden;
    }

    .company-logo img {
        width: 100%;
        height: 100%;
        object-fit: contain;
    }

    .line-connector {
        flex-grow: 1;
        width: 2px;
        background: var(--light-2);
        margin: 10px 0;
        min-height: 50px;
    }

    /* Last item shouldn't have a connector visually extending down */
    .exp-card:last-child .line-connector {
        display: none;
    }

    .card-main {
        flex-grow: 1;
        padding-bottom: 60px; /* Space for the next item */
    }

    .exp-card:last-child .card-main {
        padding-bottom: 0;
    }

    .card-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 16px;
    }

    .role {
        font-family: "Plus Jakarta Sans", sans-serif;
        font-weight: 600;
        font-size: 1.35rem;
        color: var(--cinder);
        margin: 0 0 4px 0;
    }

    .company {
        font-family: "Inter", sans-serif;
        font-weight: 500;
        font-size: 1rem;
        color: var(--purple);
        margin: 0;
    }

    .meta-info {
        text-align: right;
        display: flex;
        flex-direction: column;
        align-items: flex-end;
    }

    .period {
        font-family: "Inter", monospace;
        font-weight: 600;
        font-size: 0.9rem;
        color: var(--cinder);
        margin-bottom: 4px;
    }

    .location {
        font-family: "Inter", sans-serif;
        font-size: 0.85rem;
        color: var(--cinder-light);
    }

    .tags-container {
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
        margin-top: 12px;
    }

    .tech-pill {
        font-size: 0.85rem;
        font-weight: 500;
        padding: 6px 14px;
        border-radius: 100px;
        background: var(--light);
        color: var(--cinder-light);
        transition: all 0.2s;
    }

    .exp-card:hover .tech-pill {
        background: var(--purple-light-2);
        color: var(--purple);
    }

    @media (max-width: 768px) {
        .exp-card {
            gap: 16px;
        }

        .card-sidebar {
            width: 50px;
        }

        .company-logo {
            width: 50px;
            height: 50px;
            padding: 4px;
            border-radius: 12px;
        }

        .card-header {
            flex-direction: column;
            gap: 8px;
        }

        .meta-info {
            flex-direction: row;
            align-items: center;
            gap: 12px;
            text-align: left;
        }

        .role {
            font-size: 1.15rem;
        }

        .section-title {
            font-size: 2rem;
        }
    }
</style>
